body {
  font-family: 'Prompt', sans-serif;
  }

  #brand {
  font-size: 5rem;
}

a {
  color: black;
}

a:hover {
  color: red;
  text-decoration: none;
}

ul.nav, ul.nav-tabs {
  text-align: center;
  border: none;
  text-transform: uppercase;
  display: flex;
  justify-content: center;
}

.nav>li>a:focus, .nav>li>a:hover {
  background-color: inherit;
  border: none;
  /* text-decoration: underline; */
}



img.presentazione {
  height: 250px;
  width: 500px;
  object-fit: cover;
}

.titoli-home {
  text-align: center;
  /* white-space: nowrap; */
  height: 60px;
  /* line-height: 60px; */
}

#legenda {
  max-width: 400px;
}

ul.nav {
    width:100%;
    margin:0 auto;
    padding:0;
    list-style:none;
    text-align:center;
}
.nav li {
    display:inline-block;
    width:33%;
    margin:0;
    padding:0;
}
.nav a {
    text-align:center;
    padding:12px 0 13px 0;
    margin:0;
    display:block;
}

ul.nav li:first-child a{
    border:none;
}
ul.nav li:last-child a {
    border:none;
}
